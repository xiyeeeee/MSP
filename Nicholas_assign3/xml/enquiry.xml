<div id="formHeader">
	<h1>&nbsp;&nbsp;Create an Account</h1>
</div>

<div id="formContainer">
  <fieldset>
    <legend>Personal Details</legend>
        <label>Name:</label><br/>
        <input id="firstname" type="text" placeholder="First" required/>&nbsp;&nbsp;
		<input id="lastname" type="text" placeholder="Last" required/>
		<br/>

		<label>Choose your username:</label><br/>
        <input id="username" type="text" title="Must be at least 8 characters. You can use letters, numbers, and periods." required/>
		<br/>

	    <label>Create a password:</label><br/>
        <input id="password" type="password" title="Use at least 8 characters. Make it hard to guess." required/>
		<br/>

		<label>Confirm your password:</label><br/>
        <input id="password2" type="password" required/>
		<br/>

		<label>Your current e-mail address:</label><br/>
        <input type="email" id="emailad" required/>
		<br/>
  </fieldset>
<br>
<fieldset>
  <legend>Address</legend>
    <label>Street Address:
      <input type="text" name="saddress" placeholder="Street Address" pattern="^[a-zA-Z ]+$" required="required" />
    <br>
    </label>
    <label>City/Town:
      <input type="text" name="city" placeholder="City" pattern="^[a-zA-Z ]+$" required="required" />
    <br>
    </label>
		<label>State:</label>
		<select id="location" title="Your country or territory of residence" required>
			<option value="">Location</option>
			<option value="AF">Afghanistan</option>
			<option value="AU">Australia</option>
			<option value="BR">Brazil</option>
			<option value="BN">Brunei</option>
			<option value="CA">Canada</option>
			<option value="CN">China</option>
			<option value="CO">Colombia</option>
			<option value="DK">Denmark</option>
			<option value="EG">Egypt</option>
			<option value="FR">France</option>
			<option value="DE">Germany</option>
			<option value="GR">Greece</option>
			<option value="HK">Hong Kong</option>
			<option value="IN">India</option>
			<option value="ID">Indonesia</option>
			<option value="IQ">Iraq</option>
			<option value="IR">Ireland</option>
			<option value="IL">Israel</option>
			<option value="IT">Italy</option>
			<option value="JM">Jamaica</option>
			<option value="JP">Japan</option>
			<option value="NK">Korea North</option>
			<option value="KS">Korea South</option>
			<option value="MY">Malaysia</option>
			<option value="MX">Mexico</option>
			<option value="MM">Myanmar</option>
			<option value="NZ">New Zealand</option>
			<option value="PH">Philippines</option>
			<option value="RU">Russia</option>
			<option value="SA">Saudi Arabia</option>
			<option value="SG">Singapore</option>
			<option value="ZA">South Africa</option>
			<option value="ES">Spain</option>
			<option value="SE">Sweden</option>
			<option value="TW">Taiwan</option>
			<option value="TH">Thailand</option>
			<option value="UA">Ukraine</option>
			<option value="GB">United Kingdom</option>
			<option value="US">United States of America</option>
			<option value="VN">Vietnam</option>
  </select>
  <br>
  <label>Postcode:
    <input type="text" name="pcode" placeholder="Postcode" pattern="^[a-zA-Z ]+$" required="required" />
  </label>
</fieldset>
<br>
<fieldset>
  <legend>Other Information</legend>
  <label>Phone Number:
    <input type="text" name="pnum" placeholder="Phone Number" pattern="^[a-zA-Z ]+$" required="required" />
    <br>
  </label>
  <label>Services:</label>
    <select id="location" title="Services" required>
      <option value="">Services</option>
      <option value="">Home</option>
      <option value="">Heroes</option>
      <option value="">Updates</option>
      <option value="">Esports</option>
    </select>
    <br>
    <label>Comments:<br />
      <textarea name="comments" placeholder="Enter comments here" rows="8" cols="40"></textarea>
    </label>
</fieldset>
